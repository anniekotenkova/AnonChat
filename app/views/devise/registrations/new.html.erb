<div class='backgroundPage'>
  <div class='form'>
    <h2>Регистрация</h2>
    <p>или <%= link_to "Войти", new_session_path(resource_name) %></p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "formControl" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "formControl" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "formControl" %>
      </div>

      <div class="actions">
        <%= f.submit "Вход", class: "formButton" %>
      </div>
    <% end %>
  </div>
</div>
