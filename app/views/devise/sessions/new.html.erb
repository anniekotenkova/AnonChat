<div class='backgroundPage'>
  <div class='form'>
    <h2>Войти</h2>
    <p>или <%= link_to "Зарегистрироваться", new_registration_path(resource_name) %></p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "formControl" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "formControl" %>
      </div>

      <div class="actions">
        <%= f.submit "Вход", class: "formButton" %>
      </div>
    <% end %>

    <%= link_to "Забыли пароль?", new_password_path(resource_name) %>
  </div>
</div>
